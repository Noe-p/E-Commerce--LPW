{% extends 'base.html.twig' %}

{% block title %}Woodbrass Guitar{% endblock %}

{% block body %}
<div class='main'>
    <h1>Woodbrass Guitar</h1>

    <div class='filters'>
        <a href='/'>Tous</a>
    {% for category in categories %}
        <a href={{"index.php?category=#{category.id}"}}>{{category.name}}</a>
        {% else %}
        <p>Aucune cat√©gorie disponible.</p>
    {% endfor %}
    </div>

    <div class='homeItemCardContainer'>
    {% for product in products %}
        {% include './home_page/homeItemCard.html.twig' 
            with {
                'id': product.id,
                'title' : product.name, 
                'picture' : product.image, 
                'description': product.description,
                'price': product.price
            }
        %}
    {% else %}
        <p>Aucun article disponible en stock.</p>
    {% endfor %}
    </div>

</div>

<style>
    .main{
        margin-top: 30px;
        display: flex; 
        flex-direction: column; 
        align-items: center; 
        width: 90%;
        justify-content: center;
    }

    .filters {
        margin-top: 30px;
        height: 100px;
        width: 100%;
        display: flex; 
        align-items: center; 
        justify-content: center;
        border-top: solid 1px black;
        border-bottom: solid 1px black;
    }

    .filters a {
        font-size: 1.2em;
        padding-inline: 30px;
    }
    .homeItemCardContainer{
        margin-top: 30px;
        display: flex; 
        justify-content: center;
        width: 100%;
        flex-wrap: wrap;

    }
</style>
{% endblock %}


