{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<h1>Créer un compte</h1>

	{{ form_start(registrationForm) }}
	{{ form_row(registrationForm.email, {label: 'Email'}) }}
	{{ form_row(registrationForm.lastName, {label: 'Nom'}) }}
	{{ form_row(registrationForm.firstName, {label: 'Prénom'}) }}
	{{ form_row(registrationForm.phone, {label: 'Téléphone'}) }}
	{{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}

	<button class='submit' type="submit" class="btn">Créer un compte</button>
	{{ form_end(registrationForm) }}

	<a href="{{ path('app_login') }}">Retour</a>


	<style>
		h1 {
			margin-bottom: 10px;
		}

		label {
			margin-top: 10px;
		}

		button {
			margin-top: 30px;
		}

		a {
			margin-top: 20px;
		}
	</style>
{% endblock %}
